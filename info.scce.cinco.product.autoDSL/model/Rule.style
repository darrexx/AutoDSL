/* Node styles for Operations*/
nodeStyle commutableOperation (1) {
	roundedRectangle {
		size (120, fix 20)
		corner (10,10)
		rectangle {
			appearance io
			position (CENTER, TOP 5)
			size (110, fix 20)
			text {
				position (CENTER, MIDDLE)
				value "%s"
			}	
		}
		polyline {
			points [ (0,25) (120,25) ]
		}
	}
}

nodeStyle nonCommutableOperation (1) {
	roundedRectangle {
		size (120, fix 20)
		corner (10,10)
		rectangle {
			appearance io
			position (CENTER, TOP 26)
			size (110, fix 20)
			text {
				position (CENTER, MIDDLE)
				value "%s"
			}	
		}
		polyline {
			points [ (7,25) (113,25) ]
		}
		polyline {
			points [ (7,46) (113,46) ]
		}
		polyline {
			points [ (0,67) (120,67) ]
		}
	}
}

nodeStyle comment(1) {
	roundedRectangle {
		appearance {
			background (250, 240, 200)
		}
		size (120,90)
		corner (10,10)
