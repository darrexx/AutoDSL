/* Shared appearances */
appearance io {
	background (255,255,255)
	foreground (255,255,255)
}

/* Edge styles */
edgeStyle controlFlow {
	appearance {
		lineStyle SOLID
	}
	decorator {
		location (1.0)
		ARROW
	}
}

edgeStyle labeledControlFlow(1){
	appearance {
		lineStyle SOLID
	}
	decorator {
		location (1.0)
		ARROW
	}
	decorator{
		location(0.5)
		text {
			value "%s"
		}
		movable
	}
}

edgeStyle dataFlow {
	appearance {
		lineStyle DOT
	}
	decorator {
		location (1.0)
		ARROW
		appearance {
			lineStyle DOT
		}
	}
}

/* Node styles for IO */
nodeStyle inputPort (1) {
	rectangle {
		appearance io
		size (110,18)
		image {
			position (LEFT, MIDDLE)
			size (fix 16,fix 16)
			path ( "icons/inputPort.png" )
		}
		text {
			position ( LEFT 16, MIDDLE)
			value "%s"			
		}
	}
}

