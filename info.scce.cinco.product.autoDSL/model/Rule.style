/* Shared appearances */
appearance io {
	background (255,255,255)
	foreground (255,255,255)
}

/* Edge styles */
edgeStyle controlFlow {
	appearance {
		lineStyle SOLID
	}
	decorator {
		location (1.0)
		ARROW
	}
}
nodeStyle syscomponent (1){
	rectangle {
		appearance {
			lineWidth 3
			background (255, 255, 255)
		}
		size(140,80)
		text {
			position ( CENTER, MIDDLE )
			value "%s"
		}
	}
}

edgeStyle labeledControlFlow(1){
	appearance {
		lineStyle SOLID
	}
	decorator {
		location (1.0)
		ARROW
	}
	decorator{
		location(0.5)
		text {
			value "%s"
		}
		movable
	}
}

edgeStyle dataFlow {
	appearance {
		lineStyle DOT
	}
	decorator {
		location (1.0)
		ARROW
		appearance {
			lineStyle DOT
		}
	}
}

