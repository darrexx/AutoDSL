/* Node styles for Operations*/
nodeStyle commutableOperation (1) {
	roundedRectangle {
		size (fix 120,90)
		corner (10,10)
		text {
			position ( CENTER, TOP 4 )
			value "%s"	
		}
		polyline {
			points [ (7,20) (113,20) ]
		}
	}
}

